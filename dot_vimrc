so $DOTFILES/vim/plugins.vim
so $DOTFILES/vim/nerdtree.vim
so $DOTFILES/vim/theme.vim

" set <Leader> to <space>
nnoremap <SPACE> <Nop>
let mapleader=" "

" map window keys
nnoremap <silent> <C-j> <C-w>j 
nnoremap <silent> <C-k> <C-w>k 
nnoremap <silent> <C-h> <C-w>h 
nnoremap <silent> <C-l> <C-w>l 

" set tab width
set expandtab
set shiftwidth=2
set softtabstop=2

